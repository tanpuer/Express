<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/splash_fragment_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/splash_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_fragment_image"
        android:layout_marginTop="@dimen/splash_title_margin"
        android:textAlignment="center"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/splash_fragment_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_fragment_title"
        android:layout_marginTop="@dimen/splash_title_margin"
        android:textAlignment="center"
        />

</RelativeLayout>
